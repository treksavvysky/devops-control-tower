# Example Environment Configuration for DevOps Control Tower
# Copy this file to .env and update with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME=devops-control-tower
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Configuration (for Docker Compose)
# If using Docker Compose, these values are used to set up the postgres container
POSTGRES_USER=devops
POSTGRES_PASSWORD=devops
POSTGRES_DB=devops_control_tower
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL
# For local development (no Docker): sqlite:///./devops_control_tower.db
# For Docker Compose: postgresql://devops:devops@postgres:5432/devops_control_tower
# For external Postgres: postgresql://user:pass@host:5432/dbname
DATABASE_URL=sqlite:///./devops_control_tower.db
DATABASE_ECHO=false

# Redis Cache & Message Broker
# For local development: redis://localhost:6379/0
# For Docker Compose: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# AI & ML CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PATH=

# Jules Dev Kit Integration
JULES_DEV_KIT_URL=http://localhost:8001
JULES_DEV_KIT_API_KEY=your-jules-api-key

# Git Autobot Integration
GIT_AUTOBOT_URL=http://localhost:8002
GIT_AUTOBOT_API_KEY=your-git-autobot-key

# =============================================================================
# CLOUD PROVIDER CONFIGURATION
# =============================================================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-west-2
AWS_PROFILE=default

# Azure Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
# Kubernetes Cluster
KUBECONFIG=~/.kube/config
KUBE_NAMESPACE=devops-control-tower
KUBE_CLUSTER_NAME=default

# Helm Configuration
HELM_TIMEOUT=300
HELM_WAIT=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_QUERY_TIMEOUT=30

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# Elasticsearch/OpenSearch (ELK Stack)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Datadog (Optional)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# CI/CD INTEGRATION
# =============================================================================
# Jenkins
JENKINS_URL=http://localhost:8080
JENKINS_USERNAME=admin
JENKINS_PASSWORD=admin
JENKINS_API_TOKEN=your-jenkins-api-token

# GitLab CI
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your-gitlab-token

# GitHub Actions
GITHUB_ACTIONS_TOKEN=your-github-actions-token

# =============================================================================
# MESSAGING & NOTIFICATIONS
# =============================================================================
# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL=#devops-alerts

# Discord Integration
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# =============================================================================
# CELERY CONFIGURATION (Background Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC

# =============================================================================
# INFRASTRUCTURE AS CODE
# =============================================================================
# Terraform Configuration
TERRAFORM_BACKEND=s3
TERRAFORM_STATE_BUCKET=your-terraform-state-bucket
TERRAFORM_STATE_KEY=devops-control-tower/terraform.tfstate
TERRAFORM_STATE_REGION=us-west-2

# Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_INVENTORY=inventory/production
ANSIBLE_VAULT_PASSWORD_FILE=.vault_pass

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# SSL/TLS Configuration
SSL_CERT_PATH=certs/server.crt
SSL_KEY_PATH=certs/server.key
SSL_VERIFY=true

# JWT Token Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# =============================================================================
# JCT POLICY CONFIGURATION
# =============================================================================
# Allowed Repository Prefixes (comma-separated)
# Controls which repositories can be targeted by tasks via the policy gate.
# Examples:
#   - "myorg/,partnerorg/" - Allow repos starting with myorg/ or partnerorg/
#   - "acme-corp/" - Allow only acme-corp/* repos
#   - "" (empty) - Deny all repositories (default deny-by-default behavior)
# IMPORTANT: If unset or empty, ALL repository access will be denied.
JCT_ALLOWED_REPO_PREFIXES=myorg/,example-org/

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MONITORING=true
ENABLE_AI_AGENTS=true
ENABLE_MULTI_CLOUD=true
ENABLE_SECURITY_SCANNING=true
ENABLE_COST_OPTIMIZATION=true
ENABLE_PREDICTIVE_SCALING=false
ENABLE_EXPERIMENTAL_FEATURES=false
